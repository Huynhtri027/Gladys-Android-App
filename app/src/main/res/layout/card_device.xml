<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/device_binary_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/device_binary_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_devices"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/device_binary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/device_binary_logo"
            android:layout_toStartOf="@+id/device_binary_value"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/device_binary_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/device_binary_name"
            android:layout_below="@+id/device_binary_name"
            android:layout_marginBottom="10dp"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/device_binary_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/device_multilevel_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/device_multilevel_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_devices"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/device_multilevel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/device_multilevel_logo"
            android:layout_toStartOf="@+id/device_multilevel_velue_text"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/device_multilevel_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/device_multilevel_name"
            android:layout_below="@+id/device_multilevel_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_multilevel_velue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/device_multilevel_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_multilevel_tag"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/device_multilevel_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/device_sensor_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/device_sensor_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_devices"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/device_sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/device_sensor_logo"
            android:layout_toStartOf="@+id/device_sensor_value"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/device_sensor_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/device_sensor_name"
            android:layout_below="@+id/device_sensor_name"
            android:layout_marginBottom="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>