<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/specific_alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name" />

    <EditText
        android:id="@+id/specific_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/specific_alarm_name"
        android:layout_below="@+id/specific_alarm_name"
        android:layout_marginTop="16dp"
        android:drawableEnd="@drawable/ic_clock"
        android:ems="10"
        android:hint="@string/time"
        android:focusable="false"/>

    <EditText
        android:id="@+id/specific_alarm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/specific_alarm_time"
        android:layout_below="@+id/specific_alarm_time"
        android:layout_marginTop="21dp"
        android:drawableEnd="@drawable/ic_date"
        android:ems="10"
        android:hint="@string/date"
        android:focusable="false"/>

</RelativeLayout>